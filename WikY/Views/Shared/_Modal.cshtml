@using WikY.Models.Modal
@model ModalViewModel

@{
}

<div id="@Model.Id" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Model.Body</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="@Model.OnYesJavascript">Yes</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="@Model.OnNoJavascript">No</button>
            </div>
        </div>
    </div>
</div>
