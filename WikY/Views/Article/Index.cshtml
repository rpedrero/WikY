@using WikY.Models.Article
@model IEnumerable<ArticleViewModel>

<p><a class="btn btn-primary" asp-action="Create" role="button">Create article</a></p>

<div id="delete-article-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete article about topic: "<span id="article-to-delete-title"></span>"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="deleteSelectedArticle()">Yes</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="unselectCurrentArticle()">No</button>
            </div>
        </div>
    </div>
</div>

<div id="article-search-bar">
    <p>
        <label for="topic">
            Topic:
        </label>
        <input type="text" name="topic" id="search-by-topic-input" />
    </p>
    <p>
        <label for="content">
            Content:
        </label>
        <input type="text" name="content" id="search-by-content-input" />
    </p>
    <p>
        <label for="author">
            Author:
        </label>
        <input type="text" name="author" id="search-by-author-input" />
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Topic</th>
            <th scope="col">Author</th>
            <th scope="col">Created on</th>
            <th scope="col">Last modified on</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody id="articles-list">
        <partial name="_ArticlesList" model="Model"/>
    </tbody>
</table>

<p><a class="btn btn-primary" asp-action="Create" role="button">Create article</a></p>

<script>
    let deleteModal = new bootstrap.Modal(document.getElementById('delete-article-modal'), {
        keyboard: false
    });

    let modalArticleToDeleteTitleElement = $('#article-to-delete-title');

    let selectedArticleId = null;

    function showDeleteModal(articleId) {
        selectedArticleId = articleId;

        modalArticleToDeleteTitleElement.text($('#article-' + articleId + '>td>a').text());

        deleteModal.show();
    }

    function unselectCurrentArticle() {
        selectedArticleId = null;
        modalArticleToDeleteTitleElement.text('');
    }

    function deleteSelectedArticle() {
        $.ajax({
            url: '/Article/DeleteJson/' + selectedArticleId,
            type: 'DELETE',
            success: function (result) {
                $('#article-' + selectedArticleId).remove();
            },

        }).done(function () {
            unselectCurrentArticle();
        });
    }

    let searchByTopicInputElement = $('#search-by-topic-input');
    let searchByContentInputElement = $('#search-by-content-input');
    let searchByAuthorInputElement = $('#search-by-author-input');

    let articlesTableElement = $('#articles-list');

    searchByTopicInputElement.on('input', onSearchFieldInput);
    searchByContentInputElement.on('input', onSearchFieldInput);
    searchByAuthorInputElement.on('input', onSearchFieldInput);

    function onSearchFieldInput(e) {
        $.ajax({
            url: '/Article/SearchAjax/',
            type: 'GET',
            data: {
                topic: searchByTopicInputElement.val(),
                content: searchByContentInputElement.val(),
                author: searchByAuthorInputElement.val(),
            },
            success: function (data) {
                articlesTableElement.html(data);
            }
        });
    }
</script>
